# ============================================================
# Smart University Platform - Environment Variables
# ============================================================
# Copy this file to .env and update the values for your environment
# NEVER commit the .env file to version control!
# ============================================================

# Database credentials (change in production!)
DB_USER=postgres
DB_PASSWORD=your-secure-database-password

# Redis password (REQUIRED - matches docker-compose.yml)
REDIS_PASSWORD=your-secure-redis-password

# RabbitMQ credentials (change in production!)
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your-secure-rabbitmq-password

# ⚠️ JWT Secret - CRITICAL SECURITY SETTING! ⚠️
# The default value below is PUBLIC and MUST be changed in production!
# Generate a secure secret: openssl rand -base64 32
# This MUST be the same for both auth-service and gateway-service
# Minimum 256 bits (32 bytes) required
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_USE_openssl_rand_base64_32

# JWT Token expiration (in milliseconds)
# Default: 3600000 (1 hour)
JWT_EXPIRATION_MS=3600000
